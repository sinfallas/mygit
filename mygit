#!/usr/bin/env bash
# Made by Sinfallas <sinfallas@yahoo.com>
# Licence: GPL-2
LC_ALL=C

function agregar() {
	if [[ $? = 0 ]]; then
		echo -e "\e[00;1;92mArchivos agregados correctamente.\e[00m"
	else
		echo -e "\e[00;1;92mError al agregar archivos.\e[00m"
		exit 1
	fi
}

function hacercommit() {
	if [[ $? = 0 ]]; then
		echo -e "\e[00;1;92mCommit realizado correctamente.\e[00m"
	else
		echo -e "\e[00;1;92mError al realizar commit.\e[00m"
		exit 1
	fi
}

function hacerpush() {
	if [[ $? = 0 ]]; then
		echo -e "\e[00;1;92mEnvio realizado correctamente.\e[00m"
	else
		echo -e "\e[00;1;92mError al realizar envio.\e[00m"
		exit 1
	fi
}

case "$1" in
	up)
		git add .
		agregar
		git commit -a
		hacercommit
		git push --all
		hacerpush
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	up-all)
		for i in $(find . -maxdepth 1 -type d | cut -c 3-50); do
			cd $i
			echo -e "\e[00;1;92m$(pwd)\e[00m"
			git add .
			agregar
			git commit -a -m $2
			hacercommit
			git push --all
			hacerpush
			cd ..
		done
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	change)
		git log --decorate > changelog
		git add .
		agregar
		git commit -a -m "* changelog"
		hacercommit
		git push --all
		hacerpush
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	change-all)
		for i in $(find . -maxdepth 1 -type d | cut -c 3-50); do
			cd $i
			echo -e "\e[00;1;92m$(pwd)\e[00m"
			git log --decorate > changelog
			git add .
			agregar
			git commit -a -m "* changelog"
			hacercommit
			git push --all
			hacerpush
			cd ..
		done
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	sconfig)
		git config --global commit.gpgsign true
		git config --global user.signingkey $2
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	sup)
		git add .
		agregar
		git commit -S -a
		hacercommit
		git push --all
		hacerpush
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	sup-all)
		for i in $(find . -maxdepth 1 -type d | cut -c 3-50); do
			cd $i
			echo -e "\e[00;1;92m$(pwd)\e[00m"
			git add .
			agregar
			git commit -S -a -m $2
			hacercommit
			git push --all
			hacerpush
			cd ..
		done
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	schange)
		git log --decorate > changelog
		git add .
		agregar
		git commit -S -a -m "* changelog"
		hacercommit
		git push --all
		hacerpush
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	schange-all)
		for i in $(find . -maxdepth 1 -type d | cut -c 3-50); do
			cd $i
			echo -e "\e[00;1;92m$(pwd)\e[00m"
			git log --decorate > changelog
			git add .
			agregar
			git commit -S -a -m "* changelog"
			hacercommit
			git push --all
			hacerpush
			cd ..
		done
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	refresh-all)
		for i in $(find . -maxdepth 1 -type d | cut -c 3-50); do
    			cd $i
			echo -e "\e[00;1;92m$(pwd)\e[00m"
			git pull
			git checkout
			cd ..
		done
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	refresh)
		git pull
		git checkout
		echo -e "\e[00;1;92mFinalizado...\e[00m"
		;;

	*)
		echo "uso: $(basename $0) opciones"
		echo "sconfig	ID	configuracion de firma"
		echo "sup		subida firmada"
		echo "sup-all <msj>	subida firmada para todos"
		echo "schange		changelog firmado"
		echo "schange-all	changelog firmado para todos"
		echo "up		subida simple"
		echo "up-all  <msj>	subida simple para todos"
		echo "change		changelog simple"
		echo "change-all	changelog simple para todos"
		echo "refresh		refresca el repositorio"
		echo "refresh-all	refresca todos los repositorios"
		;;
esac
exit 0
